<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/tvmini1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Apakaph Kamu Jomblo?"
        />
    <EditText 
        android:id="@+id/etmini1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvmini1"
        android:hint="Yes / No"
        />
    <Button
        android:id="@+id/btnmini1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etmini1"
        android:text="Submit"
        />
    <TextView
        android:id="@+id/tvhasilmini1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnmini1"
        />
    <TextView
        android:id="@+id/tvmini2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvhasilmini1"
        android:text="Apakah Kamu Ganteng ?"
        />
    <EditText
        android:id="@+id/etmini2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvmini2"
        android:hint="Yes / No"
        />
    <Button
        android:id="@+id/btnmini2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etmini2"
        android:text="Submit"
        />
    <TextView
        android:id="@+id/tvhasilmini2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnmini2"
        />
    <TextView
        android:id="@+id/tvmini3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvhasilmini2"
        android:text="Apakah kamu suka loli?"
        />
    <EditText
        android:id="@+id/etmini3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvmini3"
        android:hint="Yes / No"
        />
    <Button
        android:id="@+id/btnmini3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etmini3"
        android:text="Submit"
        />
    <TextView
        android:id="@+id/tvhasilmini3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnmini3"
        />
</RelativeLayout>